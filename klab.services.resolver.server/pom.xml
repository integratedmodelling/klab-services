<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>org.integratedmodelling</groupId>
        <artifactId>klab-services</artifactId>
        <version>1.0-SNAPSHOT</version>
    </parent>
    <artifactId>klab.services.resolver.server</artifactId>
    <build>
        <plugins>
            <plugin>
                <groupId>org.integratedmodelling</groupId>
                <artifactId>klab.product</artifactId>
                <version>1.0.1-SNAPSHOT</version>
                <executions>
                    <execution>
                        <goals>
                            <goal>package-release</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <outputDirectory>target/build</outputDirectory>
                    <productName>klab.server.resolver</productName>
                    <productClass>RESOLVER_SERVICE</productClass>
                    <productMain>org.integratedmodelling.klab.services.resolver.server.ResolverServer</productMain>
                    <productDescription>The reference implementation of the k.LAB Resolver server</productDescription>
                </configuration>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <configuration>
                    <annotationProcessorPaths>
                        <path>
                            <groupId>com.github.therapi</groupId>
                            <artifactId>therapi-runtime-javadoc-scribe</artifactId>
                            <version>0.15.0</version>
                        </path>
                    </annotationProcessorPaths>
                </configuration>
            </plugin>
            <plugin>
                <groupId>com.google.cloud.tools</groupId>
                <artifactId>jib-maven-plugin</artifactId>
                <!-- The actual configuration is meant to be used locally. To move to JENKINS,
                 the TAG must be added with commit and env.USERNAME. -->
                <configuration>
                    <from>
                        <image>${env.REGISTRY}/${env.BASE_CONTAINER}</image>
                        <auth>
                            <username>${env.USERNAME}</username>
                            <password>${env.PASSWORD}</password>
                        </auth>
                    </from>
                    <to>
                        <image>${env.REGISTRY}/${env.RESOLVER_CONTAINER}</image>
                        <tags>
                            <tag>${env.TAG}</tag>
                            <tag>${env.GIT_COMMIT}</tag>
                        </tags>
                        <auth>
                            <username>${env.USERNAME}</username>
                            <password>${env.PASSWORD}</password>
                        </auth>
                    </to>
                    <container>
                        <!-- <expandClasspathDependencies>true</expandClasspathDependencies> -->
                        <user>klab:klab</user>
                        <jvmFlags>${jib.jvmFlags}</jvmFlags>
                        <mainClass>org.integratedmodelling.klab.services.resolver.server.ResolverServer</mainClass>
                        <args/>
                        <labels/>
                    </container>
                </configuration>
            </plugin>
        </plugins>
    </build>
    <dependencies>
        <dependency>
            <groupId>org.integratedmodelling</groupId>
            <artifactId>klab.services.resolver</artifactId>
            <version>${klab.version}</version>
        </dependency>
    </dependencies>
</project>